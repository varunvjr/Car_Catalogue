<%- include("../partials/header")%>
<div class="jumbotron">
	<h1 class="text-center" style="font-family: 'Sarala', ;font-size:40px;">
		Welcome to the Car Gallery
	</h1>
	<br>
	<button class="btn btn-primary" style="margin-left:42%;">
			<a class="text-white "href="/cars/new">Click here to add a new car <i class="car icon" style="color:black;"></i></a>
		</button>
</div>
<div class="container">
	<div class="row">
		<%cars.forEach(function(car){%>
		<div class="col-md-4 col-lg-3">
			<div class="card" style="width: 18rem;margin:auto 2%;">
  				<img class="card-img-top" src="<%=car.image%>" alt="Card image cap">
  					<div class="card-body">
    					<h5 class="card-title"><%=car.carname%></h5>
    						<p class="card-text"><%=car.body.substring(0,50)%>..</p>
   								 <a href="/cars/<%=car._id%>" class="btn btn-success">View More</a>
  					</div>
			</div>	
		</div>
		<%});%>
	</div>
	
</div>
<%- include("../partials/footer")%>