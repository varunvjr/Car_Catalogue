<%- include("../partials/header")%>
<div class="ui new text container segment">
	<div class="ui huge header">
		<div class="ui sizer vertical segment">
  			<div class="ui huge header">New Car Post</div>
		</div>
		<form class="ui form" method="POST" action="/cars">
			<div class="ui huge labels">
				<label class="ui label">Car Name</label>
				<input type="text" name="car[carname]" placeholder="Enter the car name"><br>
				<label class="ui label">Image</label>
				<input type="text" name="car[image]" placeholder="Enter the car image"><br>
				<label class="ui label">Car Brand</label>
				<input type="text" name="car[brandname]" placeholder="Enter the car brand"><br>
				<label class="ui label">Car Price</label>
				<input type="text" name="car[price]" placeholder="Enter the car price"><br>
				<label class="ui label">Car Details</label>
				<textarea name="car[body]" rows="5 cols=10"></textarea>
			</div>
			<input class="ui blue basic button type" type="submit">
		</form>
	</div>
</div>
<%- include("../partials/footer")%>