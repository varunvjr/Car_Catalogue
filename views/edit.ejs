<%- include("../partials/header")%>
<div class="ui new text container segment">
	<div class="ui huge header">
		<div class="ui sizer vertical segment">
  			<div class="ui huge header">Edit <%=car.carname%> details</div>
		</div>
		<form class="ui form" method="POST" action="/cars/<%=car._id%>?_method=PUT">
			<div class="ui huge labels">
				<label class="ui label">Car Name</label>
				<input type="text" name="car[carname]" value="<%=car.carname%>"><br>
				<label class="ui label">Image</label>
				<input type="text" name="car[image]" value="<%=car.image%>"><br>
				<label class="ui label">Car Brand</label>
				<input type="text" name="car[brandname]" value="<%=car.brandname%>"><br>
				<label class="ui label">Car Price</label>
				<input type="text" name="car[price]" value="<%=car.price%>"><br>
				<label class="ui label">Car Details</label>
				<textarea name="car[body]" rows="5 cols=10"><%=car.body%></textarea>
			</div>
			<input class="ui blue basic button type" type="submit">
		</form>
	</div>
</div>
<%- include("../partials/footer")%>